{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2022",
    "module": "esnext",
    "baseUrl": "./",
    "paths": {
      "app/*": ["src/*"],
    },
    "outDir": "build",
    "declaration": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "es2022"],
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*"]
}

